<Application
    x:Class="WhereDidTheMoneyGo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhereDidTheMoneyGo"
    RequestedTheme="Light">
    <Application.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style  x:Key="DefaultTextBoxStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        
        <Style x:Key="CategoriesTextBoxStyle" TargetType="TextBlock"  BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        
        <Style x:Key="AmountsTextBoxStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
        </Style>
        
        <Style x:Key="SubCategoriesTextBoxStyle" TargetType="TextBlock"  BasedOn="{StaticResource CategoriesTextBoxStyle}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        
        <Style x:Key="SubCategoryAmountsTextBoxStyle" TargetType="TextBlock" BasedOn="{StaticResource AmountsTextBoxStyle}">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>


        <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBoxStyle}">
        </Style>
    </Application.Resources>
</Application>
